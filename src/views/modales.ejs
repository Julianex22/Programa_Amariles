<% include partials/_header%>

 <!-- Modal -->
 <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <div class="container mb-5" >
                    <div class="row">
                      <div class="col-md-5">
                        <div class="card bg bg-light">
                          <div class="card-body">
                            <form action="/find"  method="post" >
                              <div class="form-group">
                                <input type="text" name="nombre_titular" id="buscar" placeholder="Inserte un nombre" class="form-control" required >
                              </div>
                                <button type="submit" class="btn btn-outline-secondary btn-block">Buscar</button>
                            </form>
                          </div>
                        </div>
                      </div> 
                    </div>
                  </div>   
                              
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>
          </div>
        </div>
      </div>
              
